-- ‚úÖ Pet Randomizer ESP UI (Working Mobile-Friendly Version)
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- üêæ All egg ‚Üí pet mappings
local petTable = {
    ["Common Egg"] = {"Golden Lab", "Dog", "Cat"},
    ["Uncommon Egg"] = {"Shiba", "Parrot", "Mouse"},
    ["Rare Egg"] = {"Penguin", "Goat", "Cow"},
    ["Epic Egg"] = {"Fox", "Bear", "Flamingo"},
    ["Legendary Egg"] = {"Lion", "Unicorn", "Dragon"},
}

-- üß† ESP Labels Storage
local eggLabels = {}

-- üîÅ Auto toggle
local autoReroll = false

-- üéÆ UI Setup
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "PetRandomizerUI"

local frame = Instance.new("Frame", screenGui)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.Size = UDim2.new(0, 200, 0, 60)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.BackgroundTransparency = 0.2

local title = Instance.new("TextLabel", frame)
title.Text = "PET RANDOMIZER"
title.Size = UDim2.new(1, 0, 0.5, 0)
title.TextScaled = true
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(255, 255, 255)

local toggle = Instance.new("TextButton", frame)
toggle.Text = "AUTO REROLL: OFF"
toggle.Position = UDim2.new(0, 0, 0.5, 0)
toggle.Size = UDim2.new(1, 0, 0.5, 0)
toggle.TextScaled = true
toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggle.TextColor3 = Color3.fromRGB(255, 255, 255)

toggle.MouseButton1Click:Connect(function()
    autoReroll = not autoReroll
    toggle.Text = "AUTO REROLL: " .. (autoReroll and "ON" or "OFF")
end)

-- üß≤ Create or update ESP label for an egg
local function updateLabel(egg)
    local eggName = egg.Name
    local possiblePets = petTable[eggName]
    if not possiblePets then return end

    local label = eggLabels[egg]
    if not label then
        local billboard = Instance.new("BillboardGui")
        billboard.Size = UDim2.new(0, 100, 0, 40)
        billboard.AlwaysOnTop = true
        billboard.StudsOffset = Vector3.new(0, 2, 0)
        billboard.Parent = egg

        local textLabel = Instance.new("TextLabel", billboard)
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.TextScaled = true
        textLabel.TextColor3 = Color3.new(1, 1, 1)
        textLabel.Font = Enum.Font.GothamBold

        eggLabels[egg] = textLabel
        label = textLabel
    end

    local newPet = possiblePets[math.random(1, #possiblePets)]
    label.Text = newPet
end

-- üïµÔ∏è Find all eggs and apply/update ESP
local function scanAndUpdateEggs()
    for _, obj in pairs(Workspace:GetDescendants()) do
        if petTable[obj.Name] then
            updateLabel(obj)
        end
    end
end

-- üîÑ Auto loop every 10 seconds
task.spawn(function()
    while true do
        if autoReroll then
            scanAndUpdateEggs()
        end
        task.wait(10)
    end
end)

-- Initial scan
scanAndUpdateEggs()
