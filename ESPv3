-- ‚úÖ Ultimate Pet Randomizer ESP with Countdown, Icon, Sound, and Animation
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- üêæ Egg to pet mappings (with name + icon)
local petTable = {
    ["Common Egg"] = {"Golden Lab", "Dog", "Penguin", "Turtle"},
    ["Rare Egg"] = {"Cat", "Red Fox", "Disco Bee", "Raccoon"},
    ["Mythical Egg"] = {"Kitsune", "Dragonfly", "Butterfly"},
}

local currentEgg = "Common Egg"

-- üì¶ Create ESP label
local espLabel = Instance.new("BillboardGui")
espLabel.Size = UDim2.new(0, 200, 0, 50)
espLabel.StudsOffset = Vector3.new(0, 3, 0)
espLabel.AlwaysOnTop = true

local textLabel = Instance.new("TextLabel", espLabel)
textLabel.Size = UDim2.new(1, 0, 1, 0)
textLabel.BackgroundTransparency = 1
textLabel.TextScaled = true
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.GothamBold

-- üîÑ Auto ESP pet randomizer
local function randomizePet()
    local petList = petTable[currentEgg]
    if not petList then return end

    local randomPet = petList[math.random(1, #petList)]
    textLabel.Text = "üéÅ " .. randomPet
    textLabel.TextColor3 = Color3.fromRGB(math.random(100,255), math.random(100,255), math.random(100,255))

    -- üîä Play sound
    local sound = Instance.new("Sound", playerGui)
    sound.SoundId = "rbxassetid://9118823105"
    sound.Volume = 1
    sound:Play()
    game.Debris:AddItem(sound, 2)

    -- ‚ú® Tween animation
    textLabel.TextTransparency = 1
    TweenService:Create(textLabel, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
end

-- üïí Auto reroll every 10 seconds
task.spawn(function()
    while true do
        randomizePet()
        task.wait(10)
    end
end)

-- üëÅÔ∏è Attach ESP to character head
espLabel.Parent = Workspace:WaitForChild(player.Name):WaitForChild("Head")

-- üß∞ Toggle UI (F to hide/show)
local toggle = true
game:GetService("UserInputService").InputBegan:Connect(function(input, gpe)
    if input.KeyCode == Enum.KeyCode.F and not gpe then
        toggle = not toggle
        espLabel.Enabled = toggle
    end
end)

-- üîÅ Auto-load ESPv2 when ESPv3 is activated
local success, err = pcall(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/gagxscripter/egg-pet-randomizer/refs/heads/main/ESPv2"))()
end)

if not success then
    warn("Failed to load ESPv2:", err)
end
