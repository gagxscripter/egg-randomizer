-- ‚úÖ Ultimate Pet Randomizer ESP with Countdown, Icon, Sound, and Animation
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local SoundService = game:GetService("SoundService")

local player = Players.LocalPlayer
local camera = Workspace.CurrentCamera
local playerGui = player:WaitForChild("PlayerGui")

-- üêæ Complete Egg ‚Üí Pet Mappings
local petTable = {
	["Common Egg"] = {"Golden Lab", "Dog", "Bunny"},
	["Uncommon Egg"] = {"Black Bunny", "Chicken", "Cat", "Deer"},
	["Rare Egg"] = {"Orange Tabby", "Spotted Deer", "Pig", "Rooster", "Monkey"},
	["Legendary Egg"] = {"Cow", "Silver Monkey", "Sea Otter", "Turtle", "Polar Bear"},
	["Mythical Egg"] = {"Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant", "Red Fox"},
	["Bug Egg"] = {"Snail", "Giant Ant", "Caterpillar", "Praying Mantis", "Dragonfly"},
	["Night Egg"] = {"Hedgehog", "Mole", "Frog", "Echo Frog", "Night Owl", "Raccoon"},
	["Bee Egg"] = {"Bee", "Honey Bee", "Bear Bee", "Petal Bee", "Queen Bee"},
	["Anti‚ÄëBee Egg"] = {"Wasp", "Tarantula Hawk", "Moth", "Butterfly", "Disco Bee"},
	["Common Summer Egg"] = {"Starfish", "Seagull", "Crab"},
	["Rare Summer Egg"] = {"Flamingo", "Toucan", "Sea Turtle", "Orangutan", "Seal"},
	["Paradise Egg"] = {"Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus"},
	["Oasis Egg"] = {"Meerkat", "Sand Snake", "Axolotl", "Hyacinth Macaw", "Fennec Fox"},
	["Zen Egg"] = {"Shiba Inu", "Nihonzaru", "Tanuki", "Tanchozuru", "Kappa", "Kitsune"},
	["Dinosaur Egg"] = {"Raptor", "Triceratops", "Stegosaurus", "Pterodactyl", "Brontosaurus", "T-Rex"},
	["Primal Egg"] = {"Parasaurolophus", "Iguanodon", "Pachycephalosaurus", "Dilophosaurus", "Ankylosaurus", "Spinosaurus"},
}

local countdownTime = 10
local activeESP = {}

-- üì¶ Billboard GUI
local function createBillboard(name)
	local billboard = Instance.new("BillboardGui")
	billboard.Size = UDim2.new(0, 100, 0, 40)
	billboard.StudsOffset = Vector3.new(0, 3, 0)
	billboard.AlwaysOnTop = true

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.TextColor3 = Color3.fromRGB(255, 255, 0)
	label.TextScaled = true
	label.Text = name
	label.Font = Enum.Font.GothamBold
	label.Parent = billboard

	return billboard, label
end

-- üîä Play sound
local function playSound()
	local sound = Instance.new("Sound", SoundService)
	sound.SoundId = "rbxassetid://9118823101" -- Replace with your preferred sound
	sound.Volume = 2
	sound:Play()
	game.Debris:AddItem(sound, 3)
end

-- üîÅ Pet Randomizer w/ Countdown
task.spawn(function()
	while true do
		for _, egg in pairs(Workspace:GetChildren()) do
			if egg:IsA("Part") and petTable[egg.Name] then
				if not activeESP[egg] then
					local gui, label = createBillboard("...")
					gui.Parent = egg
					activeESP[egg] = {gui = gui, label = label}
				end

				local petList = petTable[egg.Name]
				local chosen = petList[math.random(1, #petList)]
				activeESP[egg].label.Text = chosen

				-- ‚ú® Animation
				TweenService:Create(activeESP[egg].label, TweenInfo.new(0.5), {
					TextColor3 = Color3.fromRGB(math.random(200,255), math.random(200,255), 0)
				}):Play()

				playSound()
			end
		end

		-- ‚è±Ô∏è Countdown UI
		for i = countdownTime, 1, -1 do
			for _, info in pairs(activeESP) do
				info.label.Text = "‚è≥ " .. i
			end
			wait(1)
		end
	end
end)
